/* pages/post/post-business/post-business.wxss */
.business{
  width: 100%;
  display: flex;
  flex-direction: column;
  background-color: rgb(255, 255, 255);
  margin-top: 20rpx;
}

.busHd {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  height: 50rpx;
  padding: 20rpx 20rpx;
  border-bottom: 1px solid rgba(220, 220, 220, 0.5);
}

.busTitle {
  position: relative;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.busTitle text {
  font-size: 14px;
  font-weight: 500;
  margin-right: 10rpx;
}
.busDetail{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  height: 50rpx;
  padding: 20rpx 20rpx;
  border-bottom: 1px solid rgba(220, 220, 220, 0.5);
}
.busNormal{
  position: relative;
  display: flex;
  flex-direction: row;
  font-size: 13px;
  font-weight: 300;
  margin-right: 10rpx;
  align-items: center;
}
.busContent{
  display: flex;
  flex-direction: column;
  font-size: 12px;
  font-weight: 300;
  margin-right: 10rpx;
  align-items: center;
}