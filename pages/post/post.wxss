/* pages/post/post.wxss */
page{
  background-color: #eee;
}
.notice{
  display: flex;
  justify-content: space-between;  
  flex-wrap:wrap;
  height: 80rpx;
  line-height: 80rpx;
  width: 750rpx;
  margin-top: 10rpx;
  background-color: #fff;
  
}
.notice_swiper{
  padding-top: 15rpx;
  padding-bottom: 15rpx;
  height: 50rpx;
  line-height: 50rpx;
  width: 635rpx;
}
.notice_iteml {
  padding-left: 25rpx;
  padding-top: 15rpx;
  padding-bottom: 15rpx;
  font-size: 26rpx;
  width: 80rpx;
  height: 50rpx;
  line-height: 50rpx;
  color: #999;
}
.notice_itemr {
  padding-left: 10rpx;
  font-size: 26rpx;
  overflow: hidden;
  color: #e64340;
  width: 635rpx;
  height: 50rpx;
  line-height: 50rpx;
}
.swiper{
  width: 100%;
  height: 600rpx;
}
.swiper image{
  width: 100%;
  height: 600rpx;
}
.main-select{
  display: flex;
  flex-direction: row;
  width: 100%;
  height: 180rpx;
  background-color: #fff;
}
.select-content{
  position: relative;
   height: 100;
   display: flex;
   width: 100%;
   vertical-align: middle;
}
.select-data{
  height: 100%;
  display: flex;
  flex-direction: column;
  margin: 20rpx auto;
  align-items: center;
}
.foodsNum {
  position: absolute;
  top: 20rpx;
  right: 30rpx;
  width: 40rpx;
  height: 40rpx;
  text-align: center;
  font-size: 20rpx;
  line-height: 40rpx;
  color: #fff;
  border-radius: 50%;
  background: rgb(240, 20, 20);
  box-shadow: 0 1px 1px 0 rgba(0, 0, 0, 0.4);
}
.select-data image{
  width: 100rpx;
  height: 100rpx;
}
.select-data text{
  font-size: 11px;
}
.comment-main-box{
  display: flex;
  flex-direction: column;
  width: 100%;
  margin-top:10rpx;
  background-color: #fff;
}