/* pages/setting/setting.wxss */
.setting{
  background-color: #efeff4;
}
.setContent{
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  min-height: 100vh;
}
.infoMain{
  height: 200rpx;
  width: 100%;
  display: flex;
  flex-direction: row;
  background-color: #00BFFF;
  justify-content: space-between;
  align-items: center;
}
.infoLeft{
  display: flex;
  flex-direction: row;
  align-items: center;
}
.infoAvatar{
  height: 150rpx;
  width: 150rpx;
  margin-left:80rpx; 
}
.infoAvatar image{
  width: 150rpx;
  height: 150rpx;
  border-radius: 150rpx;
}
.infoShow{
  margin: 0 50rpx;
}
.infoName{
  font-size: 14px;
  font-weight: 500;
  margin-bottom:10rpx; 
  color: #eee;
}
.infoNumber{
  font-size: 13px;
  font-weight: 300;
  color: #eee;
}
.infoRight{
  height: 50rpx;
  width: 50rpx;
  margin-right:30rpx; 
}
.infoRight image{
  height: 50rpx;
  width: 50rpx;
}
.userWallet{
  height: 150rpx;
  width: 100%;
  background-color: #fff;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  border-bottom: 1rpx solid #d9d9d9;
}
.walletItem{
  width: 33.3%;
  height: 100%;
  text-align: center;
  display: flex;
  flex-direction: column;
  justify-content: center;
  border-right: 1rpx solid #d9d9d9; 
}
.itemNum{
  color: #00BFFF;
  font-size: 14px;
  font-weight: bold;
}
.itemRed{
  color: #FA8072;
  font-size: 14px;
  font-weight: bold;
}
.itemGold{
  color: #FF8C00;
  font-size: 14px;
  font-weight: bold;
}
.itemContent{
  font-size: 12px;
}
.infoItem{
  width: 100%;
  margin-top: 20rpx;
  background-color: #fff;
  display: flex;
  flex-direction: column;
  justify-content: center;
 
}
.itemList{
  height: 80rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  padding: 0 20rpx;
   border-bottom: 1rpx solid #d9d9d9;
}
.infoItem image{
  width: 50rpx;
  height: 50rpx;
}
.infoItem text{
  font-size: 15px;
  font-weight: 500;
  margin-left: 30rpx;
}

.loginOut{
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
}
.loginItem{
  width: 100%;
  margin-top: 20rpx;
  background-color: #fff;
  display: flex;
  flex-direction: column;
  justify-content: center;
}